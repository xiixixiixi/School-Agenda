<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Agenda - Agenda</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="agendas">Agenda</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="teachers">Teacher</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="subjects">Subject</a>
            </li>
          </ul>
        </div>
    </nav>
    <div class="container-fluid text-center">
        <h1>Welcome to your school agenda!</h1>
        <h3>Create your agenda now!</h3>
    </div>
    <hr>
    <div class="container-fluid">
        <a href="/agendas/add"><button class="btn btn-success">+ Create New</button></a>
        <br>
        <br>
        <table class="table table-bordered text-center"> 
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Deadline</th>
                    <th>SubjectId</th>
                    <th>TeacherId</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <% agendas.forEach(agenda => { %>
                        <tr>
                            <td><%= agenda.id %></td>
                            <td><%= agenda.name %></td>
                            <td><%= agenda.deadline %></td>
                            <td><%= agenda.SubjectId %></td>
                            <td><%= agenda.TeacherId %></td>
    
                            <td>
                                <a href="/agendas/remove/<%=agenda.id%>" class="btn btn-sm btn-danger me-2">X Delete</a>
                                <a href="/agendas/edit/<%=agenda.id%>" class="btn btn-sm btn-info">Edit</a>
                            </td>
                        </tr>
                    <% }) %>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>